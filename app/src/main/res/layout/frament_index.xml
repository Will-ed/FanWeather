<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="6dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="8dp">

        <RelativeLayout
            android:id="@+id/ll"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ProgressBar
                android:id="@+id/prgbar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                style="?android:attr/progressBarStyleSmall"/>



            <TextView
            android:id="@+id/city"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="24sp"
            android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/cond"
                android:layout_toRightOf="@+id/city"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/tmp"
                android:layout_below="@+id/cond"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null°"
                android:textSize="54sp"
                android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/maxmin"
                android:layout_below="@id/tmp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null/null"
                android:textSize="24sp"
                android:textColor="@color/icons"/>

            <TextView
                android:id="@+id/date"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"
                android:textSize="14sp"
                android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/wind"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>

            <TextView
                android:id="@+id/uv"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紫外指数：null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>

            <TextView
                android:id="@+id/sport"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/uv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动指数：null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/trav"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晾晒指数：null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>

            <TextView
                android:id="@+id/drsg"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/trav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="穿衣指数：null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>

            <TextView
                android:id="@+id/suggestion"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/drsg"
                android:layout_marginRight="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="穿衣建议：null"
                android:textSize="14sp"
                android:textColor="@color/icons"/>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_below="@+id/suggestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>
